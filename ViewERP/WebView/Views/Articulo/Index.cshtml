
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Listado de articulos</h4>
                <hr />
                <table class="table align-items-center table-flush table-borderless">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio Unidad</th>
                            <th>Precio Master</th>
                            <th>Precio Promotor</th>
                            <th>Precio Gerente</th>
                        </tr>
                    </thead>
                    <tbody id="tblArticulos"></tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var urlSave = '@Url.Action("GetAllArticulos", "Articulo")';

        $.ajax({
            type: "POST",
            url: urlSave,
            data: JSON.stringify({ parametro: "" }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                var row = "";
                $.each(data, function (index, item) {
                    var precioUnidad = new Intl.NumberFormat("en-IN").format(item.PRECIO_UNIDAD);
                    var precioMaster = new Intl.NumberFormat("en-IN").format(item.PRECIO_MASTER);
                    var precioPromotor = new Intl.NumberFormat("en-IN").format(item.PRECIO_PROMOTOR);
                    var precioGerente = new Intl.NumberFormat("en-IN").format(item.PRECIO_GERENTE);

                    row += "<tr>";
                    row += "<td><a href=\"@Url.Action("Edit", "Articulo")?id=" + item.idArticulo + "\">" + item.Descripcion + "</a> </td>";
                    row += "<td>" + item.NumeroDeSerie + "</td>";
                    row += "<td>$" + precioUnidad + "</td>";
                    row += "<td>$" + precioMaster + "</td>";
                    row += "<td>$" + precioPromotor + "</td>";
                    row += "<td>$" + precioGerente + "</td>";
                    row += "</tr>";
                });
                $("#tblArticulos").append(row);
            },
            error: function (result) {
                alert("Woops, se produjo un error");
            }
        });
    });
</script>