
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear contacto</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Contacto</h4>
                <hr />
                <div class="panel-body pb-0">
                    <div class="form-horizontal group-border stripped">
                        <div class="form-group">
                            <label class="col-lg-1 col-md-1 control-label">Nombre</label>
                            <div class="col-lg-7 col-md-6">
                                <input type="text" class="form-control modalColor" id="txtNombre" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-1 col-md-1 control-label">RFC</label>
                            <div class="col-lg-7 col-md-6">
                                <input type="text" class="form-control modalColor" id="txtRFC" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-1 col-md-1 control-label">Teléfono</label>
                            <div class="col-lg-7 col-md-6">
                                <input type="text" class="form-control modalColor" id="txtTelefono" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-1 col-md-1 control-label">Celular</label>
                            <div class="col-lg-7 col-md-6">
                                <input type="text" class="form-control modalColor" id="txtCelular" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-1 col-md-1 control-label">Dirección</label>
                            <div class="col-lg-7 col-md-6">
                                <input type="text" class="form-control modalColor" id="txtDireccion" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-1 col-md-1 control-label">Correo</label>
                            <div class="col-lg-7 col-md-6">
                                <input type="text" class="form-control modalColor" id="txtCorreo" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button class="btn btn-success" onclick="guardarContacto()">Guardar cambios</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function guardarContacto() {
        var _nombre = $("#txtNombre").val();
        var _rfc = $("#txtRFC").val();
        var _telefono = $("#txtTelefono").val();
        var _celular = $("#txtCelular").val();
        var _direccion = $("#txtDireccion").val();
        var _correo = $("#txtCorreo").val();

        var urlSave = '@Url.Action("GUardarContacto", "Contactos")';
        $.ajax({
            type: "POST",
            url: urlSave,
            data: JSON.stringify({ nombre: _nombre, rfc: _rfc, telefono: _telefono, celular: _celular, direccion: _direccion, correo: _correo }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert("Contacto agregado correctamente");
            },
            error: function (result) {
                alert("Woops, se produjo un error");
            }
        });
    }
</script>

