    CREATE PROCEDURE SP_ERP_GET_SALIDAS_ALMACEN_CURRENT_WEEK
    @idCompania INT
    AS
    BEGIN
        --DECLARE @idCompania AS INT
        --SET @idCompania = 10

        DECLARE @diaFinal AS DATETIME = (SELECT DIA_FINAL FROM TBL_SEMANA WHERE GETDATE() BETWEEN DIA_INICIAL AND DIA_FINAL)
        DECLARE @diaInicial AS DATETIME = (SELECT DIA_INICIAL FROM TBL_SEMANA WHERE GETDATE() BETWEEN DIA_INICIAL AND DIA_FINAL)

        SELECT A.ID_ARTICULO, A.DESCRIPCION, SUM(N.CANTIDAD) AS CANTIDAD, 'BODEGA ' + U.NOMBRE AS 'DESTINO'
        FROM TBL_MOVIMIENTO_SALIDA_ALMACEN AS M
        INNER JOIN TBL_DETALLE_MOVIMIENTO_SALIDA_ALMACEN AS N ON M.ID_MOVIMIENTO_SALIDA_ALMACEN = N.ID_MOVIMIENTO_SALIDA_ALMACEN
        INNER JOIN TBL_ARTICULO AS A ON N.ID_ARTICULO = A.ID_ARTICULO
        INNER JOIN TBL_USUARIO AS U ON M.USUARIO_SOLICITO = U.USUARIO
        WHERE M.FECHA_SALIDA BETWEEN @diaInicial AND @diaFinal AND A.ID_COMPANIA = @idCompania
        GROUP BY A.ID_ARTICULO, A.DESCRIPCION, U.NOMBRE
        END
        GO*@


