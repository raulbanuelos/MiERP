    -- Description:	PROCEDIMIENTO ALMACENADO QUE OBTIENE LA VENTA ACUMULADA DEL DÍA ACTUAL DE UNA ORGANIZACIÓN
    -- =============================================
    CREATE PROCEDURE [dbo].[SP_ERP_GET_MONTO_VENTA_DIARIA_ORGANIZACION]
    @idOrganizacion INT
    AS
    BEGIN
        SELECT FECHA_INGRESO, SUM(MONTO) AS MONTO_VENTA_DIARIA
        FROM TBL_VENTA AS V
        INNER JOIN TBL_USUARIO AS U ON V.ID_USUARIO = U.ID_USUARIO
        INNER JOIN TBL_COMPANIA AS C ON U.ID_COMPANIA = C.ID_COMPANIA
        INNER JOIN TR_ERP_ORGANIZACION_COMPANIA AS TR ON C.ID_COMPANIA = TR.ID_COMPANIA
        WHERE TR.ID_ORGANIZACION = @idOrganizacion AND V.FECHA_INGRESO = CAST(GETDATE() AS date)
        GROUP BY FECHA_INGRESO
        END
        GO*@



