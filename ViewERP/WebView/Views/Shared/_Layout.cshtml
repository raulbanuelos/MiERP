CREATE PROCEDURE SP_ERP_GET_ENTRADAS_ALMACEN_CURRENT_WEEK
@idCompania INT
AS
BEGIN
	--DECLARE @idCompania AS INT
    --SET @idCompania = 10

    DECLARE @diaFinal AS DATETIME = (SELECT DIA_FINAL FROM TBL_SEMANA WHERE GETDATE() BETWEEN DIA_INICIAL AND DIA_FINAL)
    DECLARE @diaInicial AS DATETIME = (SELECT DIA_INICIAL FROM TBL_SEMANA WHERE GETDATE() BETWEEN DIA_INICIAL AND DIA_FINAL)

    SELECT A.ID_ARTICULO,A.DESCRIPCION,SUM(D.CANTIDAD) AS CANTIDAD, P.NOMBRE AS 'DESTINO'
    FROM TBL_MOVIMIENTO_ALMACEN AS M
    INNER JOIN TBL_DETALLE_MOVIMIENTO_ENTRADA_ALMACEN AS D ON M.ID_MOVIMIENTO_ALMACEN = D.ID_MOVIMIENTO_ENTRADA_ALMACEN
    INNER JOIN TBL_ARTICULO AS A ON D.ID_ARTICULO = A.ID_ARTICULO
    INNER JOIN TBL_COMPANIA AS C ON A.ID_COMPANIA = C.ID_COMPANIA
    INNER JOIN TBL_PROVEEDOR AS P ON M.ID_PROVEEDOR = P.ID_PROVEEDOR
    WHERE M.FECHA BETWEEN @diaInicial AND @diaFinal AND C.ID_COMPANIA = @idCompania
    GROUP BY A.ID_ARTICULO, A.DESCRIPCION, P.NOMBRE
    END
    GO*@
