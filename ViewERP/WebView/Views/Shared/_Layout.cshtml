<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Oficina virtual</title>

    <!-- Bootstrap core JavaScript-->
    <script src="@Url.Content("~/assets/js/jquery.min.js")"></script>

    <script src="@Url.Content("~/Scripts/moment.min.js")"></script>

    <script src="@Url.Content("~/assets/js/popper.min.js")"></script>
    <script src="@Url.Content("~/assets/js/bootstrap.min.js")"></script>

    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>

    <link href="@Url.Content("~/Content/bootstrap-datetimepicker.css")" rel="stylesheet" />

    <!-- loader-->
    @*<link href="@Url.Content("~/assets/css/pace.min.css")" rel="stylesheet" />
        <script src="@Url.Content("~/assets/js/pace.min.js")"></script>*@
    <!--favicon-->
    <link rel="icon" href="@Url.Content("~/assets/images/favicon.ico")" type="image/x-icon">
    <!-- Vector CSS -->
    <link href="@Url.Content("~/assets/plugins/vectormap/jquery-jvectormap-2.0.2.css")" rel="stylesheet" />
    <!-- simplebar CSS-->
    <link href="@Url.Content("~/assets/plugins/simplebar/css/simplebar.css")" rel="stylesheet" />
    <!-- Bootstrap core CSS-->
    <link href="@Url.Content("~/assets/css/bootstrap.min.css")" rel="stylesheet" />
    <!-- animate CSS-->
    <link href="@Url.Content("~/assets/css/animate.css")" rel="stylesheet" type="text/css" />
    <!-- Icons CSS-->
    <link href="@Url.Content("~/assets/css/icons.css")" rel="stylesheet" type="text/css" />
    <!-- Sidebar CSS-->
    <link href="@Url.Content("~/assets/css/sidebar-menu.css")" rel="stylesheet" />
    <!-- Custom Style-->
    <link href="@Url.Content("~/assets/css/app-style.css")" rel="stylesheet" />
</head>

<body class="bg-theme bg-theme1">

    <!-- Start wrapper-->
    <div id="wrapper">

        <!--Start sidebar-wrapper-->
        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">
                <a href="index.html">
                    <img src="@Url.Content("~/assets/images/logo-icon.png")" class="logo-icon" alt="logo icon">
                    <h5 class="logo-text">Dashtreme Admin</h5>
                </a>
            </div>
            <ul class="sidebar-menu do-nicescrol">
                <li class="sidebar-header">Navegación</li>

                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fa fa-dashboard"></i> <span>Inicio</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("AgregarVenta", "Ventas")">
                        <i class="fa fa-shopping-cart"></i> <span>Registro de venta</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("DarEntrada", "EntradasAlmacen")">
                        <i class="fa fa-sign-in"></i> <span>Entradas</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("DarSalida", "SalidasAlmacen")">
                        <i class="fa fa-sign-out"></i> <span>Salidas</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("AgregarDeposito", "Depositos")">
                        <i class="fa fa-dollar"></i> <span>Depósitos</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Articulo")">
                        <i class="fa fa-list"></i><span>Articulos</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Create", "Articulo")">
                        <i class="fa fa-product-hunt"></i><span>Alta de artículos</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Create", "Contactos")">
                        <i class="fa fa-users"></i><span>Contactos</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "RecordsWeek")">
                        <i class="fa fa-calendar-check-o"></i><span>Consultar Semanas</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Suscripcion")">
                        <i class="fa fa-shopping-bag"></i><span>Suscripción</span>
                    </a>
                </li>

                @if ((bool)Session["ADMINISTRADOR"])
                {
                    <li>
                        <a href="@Url.Action("Index", "Bitacora")">
                            <i class="fa fa-shopping-bag"></i><span>Bitacora</span>
                        </a>
                    </li>
                }

                <li>
                    <a href="@Url.Action("CerrarSession", "Home")">
                        <i class="fa fa-close"></i><span>Salir</span>
                    </a>
                </li>
            </ul>

        </div>
        <!--End sidebar-wrapper-->
        <!--Start topbar header-->
        <header class="topbar-nav">
            <nav class="navbar navbar-expand fixed-top">
                <ul class="navbar-nav mr-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link toggle-menu" href="javascript:void();">
                            <i class="icon-menu menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <form class="search-bar">
                            <input type="text" class="form-control" placeholder="Buscar...">
                            <a href="javascript:void();"><i class="icon-magnifier"></i></a>
                        </form>
                    </li>
                </ul>

                <ul class="navbar-nav align-items-center right-nav-link">
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-toggle="dropdown" href="#">
                            <span class="user-profile"><img src="@Url.Content("~/assets/images/user2.jpg")" class="img-circle" alt="user avatar"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-item user-details">
                                <a href="javaScript:void();">
                                    <div class="media">
                                        <div class="avatar"><img class="align-self-start mr-3" src="@Url.Content("~/assets/images/user2.jpg")" alt="user avatar"></div>
                                        <div class="media-body">
                                            <h6 class="mt-2 user-title">@Session["NombrePersona"]</h6>
                                            <p class="user-subtitle">@Session["CorreoPersona"]</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li class="dropdown-divider"></li>
                            <li class="dropdown-item"><a href="@Url.Action("CerrarSession","Home")"><i class="icon-power mr-2"></i></a> Cerrar Sesión</li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </header>
        <!--End topbar header-->

        <div class="clearfix"></div>

        <div class="content-wrapper">
            <div class="container-fluid">

                @RenderBody()

                <!--start overlay-->
                <div class="overlay toggle-menu"></div>
                <!--end overlay-->

            </div>
            <!-- End container-fluid-->

        </div>
        <!--End content-wrapper-->
        <!--Start Back To Top Button-->
        <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
        <!--End Back To Top Button-->
        <!--Start footer-->
        <footer class="footer">
            <div class="container">
                <div class="text-center">
                    Copyright © 2020 rcode07
                </div>
            </div>
        </footer>
        <!--End footer-->
        <!--start color switcher-->
        <div class="right-sidebar">
            <div class="switcher-icon">
                <i class="zmdi zmdi-settings zmdi-hc-spin"></i>
            </div>
            <div class="right-sidebar-content">

                <p class="mb-0">Gaussion Texture</p>
                <hr>

                <ul class="switcher">
                    <li id="theme1"></li>
                    <li id="theme2"></li>
                    <li id="theme3"></li>
                    <li id="theme4"></li>
                    <li id="theme5"></li>
                    <li id="theme6"></li>
                </ul>

                <p class="mb-0">Gradient Background</p>
                <hr>

                <ul class="switcher">
                    <li id="theme7"></li>
                    <li id="theme8"></li>
                    <li id="theme9"></li>
                    <li id="theme10"></li>
                    <li id="theme11"></li>
                    <li id="theme12"></li>
                    <li id="theme13"></li>
                    <li id="theme14"></li>
                    <li id="theme15"></li>
                </ul>
            </div>
        </div>
        <!--end color switcher-->

    </div><!--End wrapper-->

    <script type="text/javascript">
        var sessionTimeoutWarning = @Session.Timeout -1;
        var sTimeout = parseInt(sessionTimeoutWarning) * 60 * 1000;
        setTimeout('SessionEnd()', sTimeout);

        function SessionEnd() {
            location.href = "@Url.Action("CerrarSession", "Home")";
        }
    </script>
    <!-- simplebar js -->
    <script src="@Url.Content("~/assets/plugins/simplebar/js/simplebar.js")"></script>
    <!-- sidebar-menu js -->
    <script src="@Url.Content("~/assets/js/sidebar-menu.js")"></script>
    <!-- loader scripts -->
    <script src="@Url.Content("~/assets/js/jquery.loading-indicator.js")"></script>
    <!-- Custom scripts -->
    <script src="@Url.Content("~/assets/js/app-script.js")"></script>
    <!-- Chart js -->
    <script src="@Url.Content("~/assets/plugins/Chart.js/Chart.min.js")"></script>
    <!-- Index js -->
    <script src="@Url.Content("~/assets/js/index.js")"></script>
</body>
</html>

