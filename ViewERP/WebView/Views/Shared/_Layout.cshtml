CREATE PROCEDURE SP_ERP_GET_EXISTENCIA_BY_COMPANIA
@idCompania INT
AS
BEGIN
	SELECT C.ID_COMPANIA, A.ID_ARTICULO, A.DESCRIPCION, SUM(E.CANTIDAD) AS CANTIDAD
	FROM TBL_EXISTENCIA AS E
	INNER JOIN TBL_ARTICULO AS A ON E.ID_ARTICULO = A.ID_ARTICULO
	INNER JOIN TBL_ALMACEN AS AL ON E.ID_ALMACEN = AL.ID_ALMACEN
	INNER JOIN TBL_COMPANIA AS C ON AL.ID_COMPANIA = C.ID_COMPANIA
	WHERE C.ID_COMPANIA = @idCompania
    GROUP BY C.ID_COMPANIA, A.ID_ARTICULO, A.DESCRIPCION
    END
    GO*@
