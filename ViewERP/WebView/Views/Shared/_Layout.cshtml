-- Description:	PROCEDIMEINTO ALMACENADO QUE OBTIENE EL MONTO FINAL
-- =============================================
CREATE PROCEDURE [dbo].[SP_ERP_GET_VENTA_SEMANAL_ORGANIZACION_BY_COMPANIAS]
@idOrganizacion INT,
@idSemana INT
AS
BEGIN
	DECLARE @diaFinal AS DATETIME = (SELECT DIA_FINAL FROM TBL_SEMANA WHERE ID_SEMANA = @idSemana)
    DECLARE @diaInicial AS DATETIME = (SELECT DIA_INICIAL FROM TBL_SEMANA WHERE ID_SEMANA = @idSemana)

    SELECT C.ID_COMPANIA,C.NOMBRE,SUM(MONTO) AS MONTO_VENTA_DIARIA
    FROM TBL_VENTA AS V
    INNER JOIN TBL_USUARIO AS U ON V.ID_USUARIO = U.ID_USUARIO
    INNER JOIN TBL_COMPANIA AS C ON U.ID_COMPANIA = C.ID_COMPANIA
    INNER JOIN TR_ERP_ORGANIZACION_COMPANIA AS TR ON C.ID_COMPANIA = TR.ID_COMPANIA
    WHERE TR.ID_ORGANIZACION = @idOrganizacion
    AND V.FECHA_INGRESO BETWEEN @diaInicial AND @diaFinal
    GROUP BY C.ID_COMPANIA, C.NOMBRE
    END
    GO*@