-- Create date: 22 DEC 2020
-- Description:	PROCEDIMIENTO ALMACENADO QUE RETORNA LA VENTA ACUMULADA DE UN ARTICULO EN ESPECIFICO SEPARADO POR LOS 7 DIAS DE LA SEMANA ACTUAL DE UN PROMOTOR
-- =============================================
ALTER PROCEDURE [dbo].[SP_ERP_GET_VENTA_SEMANAL_DIARIA_PROMOTOR]
@idArticulo INT,
@idPromotor INT
AS
BEGIN
	DECLARE @lunes AS DATETIME = (SELECT DIA_INICIAL FROM TBL_SEMANA WHERE GETDATE() BETWEEN DIA_INICIAL AND DIA_FINAL)
    DECLARE @martes AS DATETIME = DATEADD(DAY, 1, @lunes)
    DECLARE @miercoles AS DATETIME = DATEADD(DAY, 2, @lunes)
    DECLARE @jueves AS DATETIME = DATEADD(DAY, 3, @lunes)
    DECLARE @viernes AS DATETIME = DATEADD(DAY, 4, @lunes)
    DECLARE @sabado AS DATETIME = DATEADD(DAY, 5, @lunes)
    DECLARE @domingo AS DATETIME = DATEADD(DAY, 6, @lunes)

    SELECT ID_ARTICULO, SUM(CANTIDAD) AS CANTIDAD, SUM(MONTO) AS PRECIO
    FROM TBL_VENTA AS V
    INNER JOIN TBL_DETAILS_VENTA AS D ON V.ID_VENTA = D.ID_VENTA
    INNER JOIN TBL_VENTA_PROMOTOR AS VP ON V.ID_VENTA = VP.ID_VENTA
    WHERE ID_ARTICULO = @idArticulo AND FECHA_INGRESO = @lunes AND VP.ID_USUARIO = @idPromotor
    GROUP BY ID_ARTICULO

    SELECT ID_ARTICULO, SUM(CANTIDAD) AS CANTIDAD, SUM(MONTO) AS PRECIO
    FROM TBL_VENTA AS V
    INNER JOIN TBL_DETAILS_VENTA AS D ON V.ID_VENTA = D.ID_VENTA
    INNER JOIN TBL_VENTA_PROMOTOR AS VP ON V.ID_VENTA = VP.ID_VENTA
    WHERE ID_ARTICULO = @idArticulo AND FECHA_INGRESO = @martes AND VP.ID_USUARIO = @idPromotor
    GROUP BY ID_ARTICULO

    SELECT ID_ARTICULO, SUM(CANTIDAD) AS CANTIDAD, SUM(MONTO) AS PRECIO
    FROM TBL_VENTA AS V
    INNER JOIN TBL_DETAILS_VENTA AS D ON V.ID_VENTA = D.ID_VENTA
    INNER JOIN TBL_VENTA_PROMOTOR AS VP ON V.ID_VENTA = VP.ID_VENTA
    WHERE ID_ARTICULO = @idArticulo AND FECHA_INGRESO = @miercoles AND VP.ID_USUARIO = @idPromotor
    GROUP BY ID_ARTICULO

    SELECT ID_ARTICULO, SUM(CANTIDAD) AS CANTIDAD, SUM(MONTO) AS PRECIO
    FROM TBL_VENTA AS V
    INNER JOIN TBL_DETAILS_VENTA AS D ON V.ID_VENTA = D.ID_VENTA
    INNER JOIN TBL_VENTA_PROMOTOR AS VP ON V.ID_VENTA = VP.ID_VENTA
    WHERE ID_ARTICULO = @idArticulo AND FECHA_INGRESO = @jueves AND VP.ID_USUARIO = @idPromotor
    GROUP BY ID_ARTICULO

    SELECT ID_ARTICULO, SUM(CANTIDAD) AS CANTIDAD, SUM(MONTO) AS PRECIO
    FROM TBL_VENTA AS V
    INNER JOIN TBL_DETAILS_VENTA AS D ON V.ID_VENTA = D.ID_VENTA
    INNER JOIN TBL_VENTA_PROMOTOR AS VP ON V.ID_VENTA = VP.ID_VENTA
    WHERE ID_ARTICULO = @idArticulo AND FECHA_INGRESO = @viernes AND VP.ID_USUARIO = @idPromotor
    GROUP BY ID_ARTICULO

    SELECT ID_ARTICULO, SUM(CANTIDAD) AS CANTIDAD, SUM(MONTO) AS PRECIO
    FROM TBL_VENTA AS V
    INNER JOIN TBL_DETAILS_VENTA AS D ON V.ID_VENTA = D.ID_VENTA
    INNER JOIN TBL_VENTA_PROMOTOR AS VP ON V.ID_VENTA = VP.ID_VENTA
    WHERE ID_ARTICULO = @idArticulo AND FECHA_INGRESO = @sabado AND VP.ID_USUARIO = @idPromotor
    GROUP BY ID_ARTICULO

    SELECT ID_ARTICULO, SUM(CANTIDAD) AS CANTIDAD, SUM(MONTO) AS PRECIO
    FROM TBL_VENTA AS V
    INNER JOIN TBL_DETAILS_VENTA AS D ON V.ID_VENTA = D.ID_VENTA
    INNER JOIN TBL_VENTA_PROMOTOR AS VP ON V.ID_VENTA = VP.ID_VENTA
    WHERE ID_ARTICULO = @idArticulo AND FECHA_INGRESO = @domingo AND VP.ID_USUARIO = @idPromotor
    GROUP BY ID_ARTICULO

    END*@
