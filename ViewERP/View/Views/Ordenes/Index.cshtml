
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id Orden</th>
                    <th>Folio</th>
                    <th>Fecha Solicitud</th>
                    <th>Fecha Entrega</th>
                    <th>Cliente</th>
                    <th>Requisición</th>
                    <th>Proyecto</th>
                    <th>Usuario</th>
                    <th>Estatus</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id Orden</th>
                    <th>Folio</th>
                    <th>Fecha Solicitud</th>
                    <th>Fecha Entrega</th>
                    <th>Cliente</th>
                    <th>Requisición</th>
                    <th>Proyecto</th>
                    <th>Usuario</th>
                    <th>Estatus</th>
                </tr>
            </tfoot>
            <tbody id="myTable"></tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $("#dataTable").DataTable();

    $(function () {
        var urlSave = '@Url.Action("GetAllOrdenes", "Ordenes")';
        $.ajax({
            type: "POST",
            url: urlSave,
            data: JSON.stringify({ parametro: "" }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                llenarTabla(data);
            },
            error: function (result) {
                alert("Error!");
            }
        });
    });

    function llenarTabla(data) {
        var table = $('#dataTable').DataTable();

        var monthNames = [
           "Enero", "Febrero", "Marzo",
           "Abril", "Mayo", "Junio", "Julio",
           "Agosto", "Septiembre", "Octubre",
           "Noviembre", "Diciembre"
        ];

        table
            .clear()
            .draw();
        $.each(data, function (index, item) {

            var fechaSolicitud = parseJsonDate(item.FechaSolicitud);
            var fechaEntrega = parseJsonDate(item.FechaEntrega);

            var dia = fechaSolicitud.getDate();
            var mes = fechaSolicitud.getMonth();
            var anio = fechaSolicitud.getFullYear();

            var fechaCompletaSolicitud = dia + "/" + monthNames[mes] + "/" + anio;

            dia = fechaEntrega.getDate();
            mes = fechaEntrega.getMonth();
            anio = fechaEntrega.getFullYear();

            var fechaCompletaEntrega = dia + "/" + monthNames[mes] + "/" + anio;
            var link = "<a href='Ordenes/DetailsOrden?id=" + item.Id_Orden + "'>" + item.Folio + "</a>";
            $("#dataTable").dataTable().fnAddData([
                item.Id_Orden,
                link,
                fechaCompletaSolicitud,
                fechaCompletaEntrega,
                item.Id_Cliente,
                item.Requisicion,
                item.Proyecto,
                item.Usuario,
                "Estatus"
            ]);
        });
    }

    function parseJsonDate(jsonDateString) {
        return new Date(parseInt(jsonDateString.replace('/Date(', '')));
    }
</script>
