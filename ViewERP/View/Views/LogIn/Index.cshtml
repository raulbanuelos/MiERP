@model View.Models.DO_Persona

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Almacen</title>

    <!-- Bootstrap core CSS-->
    <link href="@Url.Content("~/theme/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="@Url.Content("~/theme/vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="@Url.Content("~/theme/css/sb-admin.css")" rel="stylesheet" />

</head>

<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Inicio de sesión</div>
            <div class="card-body">
                @{
                    using (Html.BeginForm("Ingresar", "LogIn", Model, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Usuario</label>
                                @Html.TextBoxFor(model => model.Usuario, new { id = "email", @class = "form-control input-lg", placeholder = "Usuario" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Contraseña</label>
                                @Html.PasswordFor(model => model.Contrasena, new { id = "password", @class = "form-control input-lg", placeholder = "Contraseña" })
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox"> Recordar contraseña
                                    </label>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-block" type="submit">Iniciar Sesión</button>
                        </form>
                    }

                }
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="@Url.Content("~/theme/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/theme/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <!-- Core plugin JavaScript-->
    <script src="@Url.Content("~/theme/vendor/jquery-easing/jquery.easing.min.js")"></script>
</body>

</html>