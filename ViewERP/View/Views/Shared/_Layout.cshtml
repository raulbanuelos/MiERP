<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Mi ERP</title>

    

    <link href="@Url.Content("~/theme/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/theme/css/sb-admin.css")" rel="stylesheet" />

    <link href="@Url.Content("~/theme/vendor/datatables/dataTables.bootstrap4.css")" rel="stylesheet" />


    <script src="@Url.Content("~/theme/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/theme/vendor/jquery-easing/jquery.easing.min.js")"></script>
    <script src="@Url.Content("~/theme/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>

    <script src="@Url.Content("~/theme/vendor/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/theme/vendor/datatables/dataTables.bootstrap4.js")"></script>

    <script src="@Url.Content("~/theme/js/sb-admin-datatables.min.js")"></script>

    <script src="@Url.Content("~/theme/js/sb-admin.min.js")"></script>

    <link href="@Url.Content("~/theme/vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />

    @*SELECT 2*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <meta name="description" content="The description of my page" />
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <!--Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">ERP</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Dashboard">
                    <a class="nav-link" href="@Url.Action("Index","Home")">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">Inicio</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Almacenes">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseComponents" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-database"></i>
                        <span class="nav-link-text">Almacenes</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseComponents">
                        <li>
                            <a href="@Url.Action("Index","Almacen")">Mis Almacenes</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Articulos">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseArticulos" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-barcode"></i>
                        <span class="nav-link-text">Artículos</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseArticulos">

                        <li>
                            <a href="@Url.Action("Create","Articulo")">Crear nuevo artículo</a>
                        </li>

                        <li>
                            <a href="@Url.Action("Index","Articulo")">Listado de articulos</a>
                        </li>

                        <li>
                            <a href="@Url.Action("DarSalida","SalidasAlmacen")">Salida de artículo</a>
                        </li>

                        <li>
                            <a href="@Url.Action("RetornoMaterial","SalidasAlmacen")">Retorno de articulos</a>
                        </li>

                        <li>
                            <a href="@Url.Action("DarEntrada","EntradasAlmacen")">Entrada de artículo</a>
                        </li>

                        <li>
                            <a href="@Url.Action("Index","Existencia")">Existencias</a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Categorias articulos">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseCategorias" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-list"></i>
                        <span class="nav-link-text">Categorías</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseCategorias">
                        <li>
                            <a href="@Url.Action("Index","CategoriaArticulo")">Mis categorías</a>
                        </li>
                    </ul>
                </li> 

                

                @if ((bool)Session["ADMINISTRADOR"])
                {
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Proveedores">
                        <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseProveedores" data-parent="#exampleAccordion">
                            <i class="fa fa-fw fa-address-book-o"></i>
                            <span class="nav-link-text">Proveedores</span>
                        </a>
                        <ul class="sidenav-second-level collapse" id="collapseProveedores">
                            <li>
                                <a href="@Url.Action("Index","Proveedor")">Mis proveedores</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Reportes">
                        <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseReportes" data-parent="#exampleAccordion">
                            <i class="fa fa-fw fa-newspaper-o"></i>
                            <span class="nav-link-text">Reportes</span>
                        </a>
                        <ul class="sidenav-second-level collapse" id="collapseReportes">
                            <li>
                                <a href="@Url.Action("EntradasArticulos","Reportes")">Entradas artículos</a>
                            </li>

                            <li>
                                <a href="@Url.Action("SalidasArticulos","Reportes")">Salidas artículos</a>
                            </li>
                        </ul>
                    </li>
                }

                @if ((bool)Session["PRODUCCION"] || (bool)Session["ADMINISTRADOR"])
                {

                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Producción">
                        <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseProduccion" data-parent="#exampleAccordion">
                            <i class="fa fa-fw fa-first-order"></i>
                            <span class="nav-link-text">Producción</span>
                        </a>
                        <ul class="sidenav-second-level collapse" id="collapseProduccion">
                            <li>
                                <a href="@Url.Action("Crear","Ordenes")">Generar órden</a>
                            </li>

                            <li>
                                <a href="@Url.Action("Index","Ordenes")">Ver ordenes</a>
                            </li>

                            <li>
                                <a href="@Url.Action("CargarOrden","Ordenes")">Cargar órden</a>
                            </li>
                        </ul>
                    </li>
                    
                }

                @if ((bool)Session["ADMINISTRADOR"])
                {
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Alertas stock">
                        <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseAlertas" data-parent="#exampleAccordion">
                            <i class="fa fa-fw fa-warning"></i>
                            <span class="nav-link-text">Alertas</span>
                        </a>
                        <ul class="sidenav-second-level collapse" id="collapseAlertas">
                            <li>
                                <a href="@Url.Action("Alertas", "AlertasStock")">Ver alertas</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Usuarios">
                        <a class="nav-link" href="@Url.Action("Index","Usuario")">
                            <i class="fa fa-fw fa-users"></i>
                            <span class="nav-link-text">Usuarios</span>
                        </a>
                    </li>

                }

                
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Mis datos">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseMisDatos" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-warning"></i>
                        <span class="nav-link-text">Mis datos</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseMisDatos">
                        <li>
                            <a href="@Url.Action("ActualizarContrasena", "Usuario")">Cambiar contraseña</a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="CerrarSession">
                    <a class="nav-link" href="@Url.Action("CerrarSession","Home")"> 
                        <i class="fa fa-fw fa-sign-out"></i>
                        <span class="nav-link-text">Cerrar sesión</span>
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <i class="fa fa-fw fa-angle-left"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="content-wrapper">
        <div class="container-fluid">
            @RenderBody()
        </div>

        <!--Footer-->
        <footer class="sticky-footer">
            <div class="container">
                <div class="text-center">
                    <p class="pull-left">
                        Copyrights &copy; 2018 <a href="http://rcode.com/" class="color-blue strong underline-effect" target="_blank">R.Bañuelos</a>. All rights reserved.
                    </p>
                </div>
            </div>
        </footer>
    </div>
</body>

</html>