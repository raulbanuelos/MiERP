@model IEnumerable<Model.DO_CategoriaArticulo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categoria articulo</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCategoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idCategoriaArticulo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idCategoriaArticulo })
        </td>
    </tr>
}

</table>
